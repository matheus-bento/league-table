{
    "version": "2.0.0",
    "tasks": [
        {
            "label": ".NET Build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/LeagueTable.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Docker Build",
            "command": "./docker-compose-install.sh",
            "type": "process"
        }
    ]
}