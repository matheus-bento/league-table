{
    "configurations": {
        "run": {
            "adapter": "vscode-node",
            "configuration": {
                "request": "launch",
                "program": "${workspaceRoot}/dist/src/index.js",
                "env": {
                    "PORT": "8080",
                    "MONGODB_CONN_STR": "<mongo-connection-string>"
                }
            },
            "breakpoints": {
                "exception": {
                    "all": "N",
                    "uncaught": "N"
                }
            }
        }
    }
}
